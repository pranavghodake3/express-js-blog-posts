extends master.pug

block content
  form
    .mb-3
      label.form-label(for='first_name') First Name
      input#first_name.form-control(type='text')
    .mb-3
      label.form-label(for='last_name') Last Name
      input#last_name.form-control(type='text')
    .mb-3
      label.form-label(for='email') Email address
      input#email.form-control(type='email')
    .mb-3
      label.form-label(for='password') Password
      input#password.form-control(type='password')
    .mb-3
      label.form-label(for='confirm_password') Confirm Password
      input#confirm_password.form-control(type='password')
    button.btn.btn-primary(type='submit') Submit

